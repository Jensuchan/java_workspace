package day10;

public class Class02 {

	public static void main(String[] args) {
		/* 자동차 클래스 생성
		 * 멤버변수 : 
		 * 메서드 : 전원, 스피드 up, 스피드 down
		 * 
		 */

	}

}
class Car {
	private String name;
	private String color;
	private boolean power;
	private int speed;
	
	public Car() {}
	public Car(String name, String color) {
		this.name = name;
		this.color = color;
	}
	
	public void power() {
		power = !power;
	}
	
	public void speed() {
		if(speed<300) {
			speed++;
		}else if (speed>0) {
			speed--;
		}
	}
	
	
	
	
	
	
	
	
	
	
}

